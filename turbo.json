{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": [
        "@repo/api#build",
        "@repo/icons-limestone#build",
        "@repo/logger#build"
      ],
      "cache": false,
      "persistent": true
    },
    "fetch-data": {
      "cache": false
    }
  }
}
