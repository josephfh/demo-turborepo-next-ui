{
  "extends": "@repo/typescript-config/next.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "Bundler",
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": ["next-env.d.ts", "next.config.cjs", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
